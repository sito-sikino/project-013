# Environment Configuration Template
# Copy to .env and fill with actual values

# Environment mode
ENV=dev

# Timezone
TZ=Asia/Tokyo

# Discord Bot Tokens
SPECTRA_TOKEN=your_spectra_bot_token_here
LYNQ_TOKEN=your_lynq_bot_token_here
PAZ_TOKEN=your_paz_bot_token_here

# Discord Channel IDs
CHAN_COMMAND_CENTER=123456789012345678
CHAN_CREATION=123456789012345678
CHAN_DEVELOPMENT=123456789012345678
CHAN_LOUNGE=123456789012345678

# Redis Configuration
REDIS_URL=redis://localhost:6379

# AI Service
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_TIMEOUT_SECONDS=30

# Development Tick Settings
TICK_INTERVAL_SEC_DEV=15
TICK_PROB_DEV=1.0
MAX_TEST_MINUTES=5

# Production Tick Settings
TICK_INTERVAL_SEC_PROD=300
TICK_PROB_PROD=0.33

# Schedule Settings
STANDBY_START=00:00
PROCESSING_AT=06:00
FREE_START=20:00

# Channel Message Limits
LIMIT_CC=100
LIMIT_CR=200
LIMIT_DEV=200
LIMIT_LO=30

# Logging
LOG_FILE=logs/run.log